package etcdv3

import (
	"fmt"
	"net/url"
	"testing"

	"github.com/coreos/etcd/mvcc/mvccpb"
	"github.com/douyu/jupiter/pkg/xlog"
)

func Test_parseurl(t *testing.T) {
	uriStr := "grpc:///?app=name"
	uri, err := url.Parse(uriStr)
	if err != nil {
		fmt.Printf("err => %+v\n", err)
		panic(err)
	}

	t.Logf("uri.Host: %s", uri.Host)
	// fmt.Printf("uri.Host => %+v\n", uri.Host)
}

func Test_updateAddrList(t *testing.T) {
	r := &etcdResolver{
		Config: &Config{
			logger: xlog.DefaultLogger,
		},
	}
	al := newAddressList("demo")
	prefix := "/testing/demo/"
	kvs := []*mvccpb.KeyValue{
		{
			Key:   []byte("/testing/demo/providers/grpc://127.0.0.1:9091"),
			Value: []byte(`{"name":"demo","scheme":"grpc","ip":"127.0.0.1","port":9091,"weight":0,"enable":true,"healthy":true,"metadata":{},"region":"","zone":"","deployment":""}`),
		},
		{
			Key:   []byte("/testing/demo/configurators/grpc:///?deployment=openapi"),
			Value: []byte(`{"metadata": {"color":"red"}`),
		},
	}
	r.updateAddrList(al, prefix, kvs...)
}
